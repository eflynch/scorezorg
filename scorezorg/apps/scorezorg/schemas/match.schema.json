{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Score": {
            "anyOf": [
                {
                    "properties": {
                        "sets": {
                            "items": {
                                "properties": {
                                    "games": {
                                        "items": {
                                            "type": "number"
                                        },
                                        "type": "array"
                                    },
                                    "tiebreak": {
                                        "items": {
                                            "type": "number"
                                        },
                                        "type": "array"
                                    }
                                },
                                "required": [
                                    "games"
                                ],
                                "type": "object"
                            },
                            "type": "array"
                        }
                    },
                    "required": [
                        "sets"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "points": {
                            "items": {
                                "type": "number"
                            },
                            "type": "array"
                        }
                    },
                    "required": [
                        "points"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "properties": {
        "date": {
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "players": {
            "items": {
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "name"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "scores": {
            "$ref": "#/definitions/Score"
        },
        "winner": {
            "anyOf": [
                {
                    "const": "draw",
                    "type": "string"
                },
                {
                    "type": "number"
                }
            ]
        }
    },
    "required": [
        "id",
        "players"
    ],
    "type": "object"
}

